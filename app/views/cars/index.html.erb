<h1 class="text-center" id="top">Welcome to the show:</h1>
<h3 class="text-center"><%= current_user.email.split("@")[0].capitalize %>, find now the perfect solution for you</h3>

<form class="form-inline" method="get" action="/cars">

    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q"> <!-- NAME="q" will PASS toINDEX.html.erb the PARAMS with the "word" searched to show the result -->

    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search a car!</button>
  </form>

<div class="card-deck ">
  <div class="row">
    <% @cars.each do |car| %>
    <div class="col-sm-4">



        <div class="card" style="width:400px">
          <img class="card-img-top" src="<%= ["https://images.unsplash.com/photo-1511338040450-bf274acbd588?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=93055a0f161d0d0cc6418efb0d678195&auto=format&fit=crop&w=967&q=80","https://images.unsplash.com/photo-1511360764098-91482031eaf6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f00548e0353da749a820370a03be8cfc&auto=format&fit=crop&w=1050&q=80","https://images.unsplash.com/photo-1523597193482-bd0e30999c06?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=1cddaba8605d3997346e26d39763318e&auto=format&fit=crop&w=634&q=80"].sample %>" alt="Card image">
          <div class="card-body">
            <h4 class="card-title"><strong><%= car.model.capitalize %></strong></h4>
            <p class="card-text"><em><%= car.description %></em></p>
            <%= link_to "show", car_path(car), class:"btn btn-info" %>
          </div>
        </div>



    </div>
    <% end %>
  </div>
</div>

<a href="#top"><h3>Back to TOP</h3></a>
